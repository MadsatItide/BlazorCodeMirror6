@if (ContentBefore is not null && CmJsInterop is not null && Config is not null && Commands is not null) {
    @ContentBefore((Commands, Config, State))
}

<div id=@Id @attributes=@AdditionalAttributes></div>

@if (ContentAfter is not null && CmJsInterop is not null && Config is not null && Commands is not null) {
    @ContentAfter((Commands, Config, State))
}

<style>
    .cm-editor {
        resize: @ResizeStyle;
        overflow: auto;
        max-height: inherit;
    }

    .cm-mention {
        color: cornflowerblue;
        font-weight: bold;
    }

    .cm-mention-detail {
        padding-x: .5em;
        margin-x: .25em;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .cm-blockquote {
        @* background-color: #f0f0f0; *@
        border-left: 0.25rem solid currentColor;
        padding: 0 0.5rem;
    }

    .cm-blockquote .cm-blockquote-open {
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
        padding-top: 0.5rem;
    }

    .cm-blockquote .cm-blockquote-close {
        border-bottom-left-radius: 0.25rem;
        border-bottom-right-radius: 0.25rem;
        padding-bottom: 0.5rem;
    }

</style>
