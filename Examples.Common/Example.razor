<h1>Code Mirror 6 demo</h1>

<CodeMirror6Wrapper
    @bind-Text=@Text
    PlaceholderText="Enter your code.... (1)"
    TabSize=@TabSize
    @bind-SelectionRanges=@selectionRanges1
/>
<hr />
Result:
<pre>@Text</pre>
<hr />


@if (selectionRanges1 is not null) {
    <div>
        Selection ranges:
    </div>
    @foreach(var range in selectionRanges1) {
        <div>
            From @range.From
            To @range.To
        </div>
    }
}

<hr />

<label for="#tabSizeInput">TabSize:</label>
<input id="tabSizeInput" @bind-value=TabSize @bind-value:event="oninput" type="number" min="1" max="8" step="1" />

<hr />
<button
    @onclick=@(async () => {
        Text = code.Replace("\r", "");
        await InvokeAsync(StateHasChanged);
    })
>Reset text</button>


<hr />
<CodeMirror6Wrapper
    PlaceholderText="Enter your code.... (2)"
    @bind-Text=@Text2
    @bind-SelectionRanges=@selectionRanges2
/>
<hr />
Result:
<pre>@Text2</pre>
<hr />

@if (selectionRanges2 is not null) {
    <div>
        Selection ranges:
    </div>
    @foreach(var range in selectionRanges2) {
        <div>
            From @range.From
            To @range.To
        </div>
    }
}
<hr />

<CodeMirror6Wrapper
    @bind-Text=@Text3
    PlaceholderText=@PlaceHolderText
    @bind-SelectionRanges=@selectionRanges3
/>

<hr />

@if (selectionRanges3 is not null) {
    <div>
        Selection ranges:
    </div>
    @foreach(var range in selectionRanges3) {
        <div>
            From @range.From
            To @range.To
        </div>
    }
}
<hr />
Result:
<pre>@Text3</pre>
<hr />

<button
    @onclick=@(async () => {
        PlaceHolderText = NewPlaceHolderText;
        await InvokeAsync(StateHasChanged);
    })
>Change placeholder text</button>





